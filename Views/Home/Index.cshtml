@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="">
    @using (Html.BeginForm())
    {
        <div class="form-group" >
            <div class=" form-group ">
                @Html.Label("Первое число")
                @Html.TextBox("fst")
            </div>
            <div class="form-group ">
                @Html.Label("Действие")
                
                    @Html.DropDownList("operation", new SelectList(new string[] { "+", "-", "*", "/" }))
                
            </div>
            <div class="form-group">
                @Html.Label("Второе число")
                @Html.TextBox("sec")
            </div>
            <br />
            <div class="">
                <p><input type="submit" class="btn btn-outline-primary" value="Result" /> </p>
            </div>
        </div>

        @ViewBag.Result;
    }
</div>
